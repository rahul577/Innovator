<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chatview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/app"
    tools:context="com.example.akshay.dustaway.LauncherActivity"
    style="@style/Widget.AppCompat.ButtonBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#eee">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:background="@color/mygreen"
        android:text="2540"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="4dp"/>


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="32dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="dustbin"
            android:background="@drawable/dustbin"
            android:layout_marginLeft="25dp"
            android:id="@+id/dustbin"
            />

        <Button
            android:id="@+id/cycle"
            android:onClick="cycle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="75dp"
            android:background="@drawable/cycle"
            />

        <Button
            android:id="@+id/camera"
            android:onClick="camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/camera" />


    </LinearLayout>

</android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:elevation="32dp"
         >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="250dp"
                android:padding="7dp"
                android:layout_height="55dp"
                android:text="  Modified silencers in vehicles should be bannned "/>

            <com.ldoublem.thumbUplib.ThumbUpView
                android:id="@+id/tpv"
                android:layout_width="40dp"
                android:layout_height="50dp"
                app:cracksColor="#33475f"
                android:layout_marginLeft="10dp"
                app:edgeColor="#9d55b8"
                app:fillColor="#ff0000"
                app:unlikeType="1"
                />

            <com.ldoublem.thumbUplib.ThumbUpView
                android:id="@+id/tpv1"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:paddingLeft="40dp"
                app:cracksColor="#33475f"
                app:edgeColor="#9d55b8"
                app:fillColor="#008000"
                app:unlikeType="1"
                />



        </LinearLayout>

    </android.support.v7.widget.CardView>

<co.intentservice.chatui.ChatView
    android:id="@+id/chat_view"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_height="match_parent"
    chatview:backgroundColor="@color/off_white"
    chatview:bubbleElevation="elevated"
    android:elevation="32dp"
    chatview:bubbleBackgroundRcv="@color/blue"
    chatview:bubbleBackgroundSend="@color/white" />




   
</LinearLayout>
