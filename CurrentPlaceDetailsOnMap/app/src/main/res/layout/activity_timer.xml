<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.currentplacedetailsonmap.TimerActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:30"
        android:id="@+id/timerTextView"
        android:layout_centerHorizontal="true"
        android:textSize="70sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="202dp"
        android:layout_marginLeft="124dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="124dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="Your speed is too high please reduce your speed or your family would be notified."
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/timerTextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>
